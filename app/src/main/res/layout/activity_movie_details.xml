<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.moviesapp.MovieDetailsActivity">

    <LinearLayout
        android:id="@+id/ll_movieDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/Category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"  />

        <ImageView
            android:id="@+id/iv_posterDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/tv_releaseDateTitle"
            style="@style/Category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/release_date" />

        <TextView
            android:id="@+id/tv_releaseDate"
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_voteAverageTitle"
            style="@style/Category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vote_average" />

        <TextView
            android:id="@+id/tv_voteAverage"
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_PlotTitle"
            style="@style/Category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plot_synopsis" />

        <TextView
            android:id="@+id/tv_plot"
            style="@style/Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>

</ScrollView>
